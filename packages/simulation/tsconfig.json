{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Pure TypeScript - no DOM or Node APIs
    // This ensures the simulation can run in any environment
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@fluxpolis/simulation/*": ["./src/*"],
      "@fluxpolis/eventbus": ["../eventbus/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    {
      "path": "../eventbus"
    }
  ]
}
