{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "paths": {
      "@fluxpolis/client/*": ["./src/*"],
      "@fluxpolis/simulation": ["../simulation/src"],
      "@fluxpolis/events": ["../events/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    {
      "path": "../events"
    },
    {
      "path": "../simulation"
    }
  ],
  "vueCompilerOptions": {
    "strictTemplates": true
  }
}
